<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:padding="8dp"
              android:background="#F2F2F2"
              android:clickable="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true">
    <com.github.chrisbanes.photoview.PhotoView
            android:layout_width="match_parent"
            android:layout_height="@dimen/details_img_height"
            android:src="@drawable/ic_launcher_foreground"
            android:id="@+id/img"
    />
    <View android:layout_width="match_parent"
          android:layout_height="@dimen/thick_separator_height"
          android:layout_marginBottom="@dimen/small_margin"
          android:layout_marginTop="@dimen/larger_margin"
          android:background="@color/colorPrimary"/>
    <com.example.basemodule.base.AppTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold"
            style="@style/textStyle"
            tools:text="Name"/>


    <com.example.basemodule.base.AppTextView
            android:id="@+id/tv_username"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"/>
    <com.example.basemodule.base.AppTextView
            android:autoLink="web"
            style="@style/textStyle"
            android:id="@+id/tv_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="13"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/thin_separator_height"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:background="@color/colorPrimary"/>
    <com.example.basemodule.base.AppTextView
            style="@style/textStyle"
            android:id="@+id/tv_repo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_heading"
            android:textStyle="bold"
            tools:text="Repo Name"/>
    <com.example.basemodule.base.AppTextView
            style="@style/textStyle"
            android:id="@+id/tv_repo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            tools:text="Repo Description"/>
    <com.example.basemodule.base.AppTextView
            style="@style/textStyle"
            android:autoLink="web"
            android:id="@+id/tv_repo_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            tools:text="Repo URL"/>


</LinearLayout>
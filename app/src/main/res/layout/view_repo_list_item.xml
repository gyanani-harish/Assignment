<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:background="#E444"
        android:paddingTop="@dimen/padding_larger_10"
        android:paddingBottom="@dimen/padding_larger_10"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="@dimen/image_outer_border_width"
                android:layout_height="@dimen/image_outer_border_height"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_shape"
        />
        <ImageView
                android:visibility="visible"
                android:layout_centerInParent="true"
                android:id="@+id/img_user"
                android:layout_marginEnd="@dimen/large_margin"
                android:layout_width="@dimen/user_avatar_width"
                android:layout_height="@dimen/user_avatar_height"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="@string/user_image"/>
    </RelativeLayout>


    <LinearLayout
            android:layout_marginStart="@dimen/large_margin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

        <com.example.basemodule.base.AppTextView
                style="@style/textStyle.white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Name"
                android:id="@+id/tv_name"/>

        <com.example.basemodule.base.AppTextView
                tools:text="Repo Name"
                style="@style/textStyle.white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_repo_name"/>

    </LinearLayout>


</LinearLayout>